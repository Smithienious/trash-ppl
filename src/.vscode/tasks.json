{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "ANTLR: Generate",
      "type": "shell",
      "command": "${workspaceFolder}/run.py",
      "args": [
        "gen"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "ANTLR: Test LexerSuite",
      "type": "shell",
      "command": "${workspaceFolder}/run.py",
      "args": [
        "test",
        "LexerSuite"
      ],
      "group": {
        "kind": "test"
      }
    },
    {
      "label": "ANTLR: Test ParserSuite",
      "type": "shell",
      "command": "${workspaceFolder}/run.py",
      "args": [
        "test",
        "ParserSuite"
      ],
      "group": {
        "kind": "test"
      }
    },
    {
      "label": "ANTLR: Test ASTGenSuite",
      "type": "shell",
      "command": "${workspaceFolder}/run.py",
      "args": [
        "test",
        "ASTGenSuite"
      ],
      "group": {
        "kind": "test"
      }
    },
    {
      "label": "ANTLR: Test CheckerSuite",
      "type": "shell",
      "command": "${workspaceFolder}/run.py",
      "args": [
        "test",
        "CheckerSuite"
      ],
      "group": {
        "kind": "test"
      }
    },
    {
      "label": "ANTLR: Test CodeGenSuite",
      "type": "shell",
      "command": "${workspaceFolder}/run.py",
      "args": [
        "test",
        "CodeGenSuite"
      ],
      "group": {
        "kind": "test"
      }
    }
  ]
}
